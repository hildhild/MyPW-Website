<style>
    .user-list-container {
        height: 100%;
        width: 100%;
        display: flex;
        flex-direction: column;
    }

    .user-list-container__header {
        width: 100%;
        height: 15%;
        /*background-color: aquamarine;*/
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }

    .user-list-container__header__left {
        float: left;
        display: flex;
        flex-direction: row;
        align-items: center;
        flex: 2;
    }

    .user-list-container__header__right {
        float: right;
        display: block;
        /*flex-direction: row;
        align-items: center;*/
        flex: 1;
    }

    .user-list-container__header__filter-item {
        top: 2px;
        height: 45px;
        width: 120px;
        position: relative;
        margin-left: 15px;
    }

    .user-list-container__header__filter-item__input {
        height: 100%;
        width: 100%;
        border: 2px solid #33A0F2;
        border-radius: 5px;
    }

    .user-list-container__list {
        width: 100%;
        height: 75%;
    }

    .user-list-back-button {
        right: 0;
        float: right;
        margin-right: 20px;
        margin-top: 17px;
        justify-items: center;
        height: 50px;
        width: 160px;
        background-color: #33A0F2;
        border-radius: 20px;
        border: none;
        text-align: center;
    }

    /*-------------------------------------------------------user-list-info-header*/
    .user-list-container__info-header {
        display: flex;
        flex-direction: row;
        align-items: center;
        width: 100%;
        padding: 0 10px 0 30px;
        margin-top: 2%;
    }

        .user-list-container__info-header h5 {
            text-align: center;
            vertical-align: middle;
            font-weight: 500;
            font-size: 18px;
        }
    .scrollable-container {
        width: 100%; 
        height: 100%;
        overflow: auto; /* Tạo thanh cuộn khi nội dung vượt quá kích thước container */
        padding-left: 30px;
    }

    /*-------------------------------------------------------user-list-scroll-content*/

    .scrollable-content {
        width: 100%;
        padding: 10px;
    }
    .user-list__item {
        box-sizing: border-box;
        width: 95%;
        height: 60px;
        background: #FFFFFF;
        border: 1px solid #000000;
        border-radius: 10px;
        display: flex;
        flex-direction: row;
        align-items: center;
    }
        .user-list__item h5 {
            text-align: center; /* Căn chữ giữa cho từng phần tử */
            vertical-align: middle;
            font-weight: 500;
            font-size: 18px;
        }
    .user-list__item+.user-list__item{
        margin-top:10px;
    }
    .user-list__item__name-box {
        flex: 2.5;
        /* Auto layout */
        display: flex;
        flex-direction: row;
        justify-content: center;
        padding: 8px 0 8px 0;
        /* M3/sys/dark/inverse-surface */
        background: #E6E0E9;
        box-shadow: 0px 4px 8px 3px rgba(0, 0, 0, 0.15), 0px 1px 3px rgba(0, 0, 0, 0.3);
        border-radius: 4.83203px;
        /* M3/title/large */
        font-weight: 400;
        font-size: 22px;
        line-height: 28px;
        text-align: center;
        /* M3/sys/dark/inverse-on-surface */
        color: #322F35;
        /* Inside auto layout */
        flex: none;
        order: 0;
        flex-grow: 1;
        min-width: 300px;
    }
    .user-list__item__view-btn-contain{
        flex: 2;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .user-list__item__view-btn {
        width: 100px;
        height: 40px;
        background: #56B8FF;
        border-radius: 20px;
        font-weight: 500;
        font-size: 20px;
        line-height: 29px;
        /* or 91% */
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: #FFFFFF;
        text-decoration: none !important;
        float: right;
    }
</style>
<div class="user-list-container">
    <div class="user-list-container__header">
        <div class="user-list-container__header__left">
            <h1 style="font-size: 24px; margin-left:15px;">Check user list:</h1>
            <div class="user-list-container__header__filter-item">
                <h5 style="position: absolute; background-color: white; font-size: 14px; padding: 2px; 
                    top: -10px; left: 10px; color: #33A0F2; text-align: left;">Last access from</h5>
                <input class="user-list-container__header__filter-item__input" type="date" id="fromInput"><br>
            </div>
            <div class="user-list-container__header__filter-item">
                <h5 style="position: absolute; background-color: white; font-size: 14px; padding: 2px; 
                    top: -10px; left: 10px; color: #33A0F2; text-align: left;">Last access to</h5>
                <input class="user-list-container__header__filter-item__input" type="date" id="toInput"><br>
            </div>
            <div class="user-list-container__header__filter-item">
                <h5 style="position: absolute; background-color: white; font-size: 14px; padding: 2px; 
                    top: -10px; left: 10px; color: #33A0F2; text-align: left;">Name</h5>
                <input class="user-list-container__header__filter-item__input" type="text" id="nameInput"><br>
            </div>
        </div>
        <div class="user-list-container__header__right">
            <a href="/admin/user-list">
                <button type="button" class="user-list-back-button" onclick="">
                    <p style=" font-size: 24px; color: white; font-weight: 600; margin:0;">Back</p>
                </button>
            </a>
        </div>
    </div>
    <div class="user-list-container__info-header">
        <!--<h5 style="flex:0.9">ID</h5>
        <h5 style="flex:3">Full Name</h5>
        <h5 style="flex:1.6">First access</h5>
        <h5 style="flex:1.6">Last access</h5>
        <h5 style="flex:0.9">Total access</h5>
        <h5 style="flex:0.8">Enable</h5>-->
        <h5 style="padding-left: 40px">ID</h5>
        <h5 style="padding-left: 150px">Full Name</h5>
        <h5 style="padding-left: 120px">First access</h5>
        <h5 style="padding-left: 45px">Last access</h5>
        <h5 style="padding-left: 12px">Total access</h5>
        <h5 style="padding-left: 12px">Enable</h5>
        <div style="flex:2"></div>
    </div>
    <div class="user-list-container__list">
        <div class="scrollable-container">
            <div class="scrollable-content">
                {{#each userItems}}
                <div class="user-list__item">
                    <h5 style="flex:0.9;">{{math @index "+" 1}}</h5>
                    <div class="user-list__item__name-box">{{firstName}} {{lastName}}</div>
                    <h5 style="flex:1.6">{{firstAccess}}</h5>
                    <h5 class="user-list__item__last-access-box" style="flex:1.6">{{lastAccess}}</h5>
                    <h5 style="flex:0.8">{{totalAccess}}</h5>
                    <h5 style="flex: 0.8; color: lawngreen">{{enable}}</h5>
                    <div class="user-list__item__view-btn-contain">
                        <a href="/admin/user-list/check-user-info/{{username}}">
                            <div class="user-list__item__view-btn">View</div>
                        </a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const filterUsers = function () {
            const fromValue = document.getElementById('fromInput').value; // yyyy-mm-dd
            const toValue = document.getElementById('toInput').value;
            const nameValue = document.getElementById('nameInput').value.toLowerCase();
            const userItems = document.querySelectorAll('.user-list__item');

            userItems.forEach(function (item) {
                const firstName = item.querySelector('.user-list__item__name-box').textContent.toLowerCase();
                const lastAccessText = item.querySelector('.user-list__item__last-access-box').textContent; // dd/mm/yyyy
                const lastAccessParts = lastAccessText.split('/');
                const lastAccessDate = new Date(`${lastAccessParts[2]}-${lastAccessParts[1]}-${lastAccessParts[0]}`);
                const showItem = firstName.includes(nameValue) &&
                                 (!fromValue || lastAccessDate >= new Date(fromValue)) &&
                                 (!toValue || lastAccessDate <= new Date(toValue));

                item.style.display = showItem ? 'flex' : 'none';
            });
        };

        document.getElementById('nameInput').addEventListener('input', filterUsers);
        document.getElementById('fromInput').addEventListener('input', filterUsers);
        document.getElementById('toInput').addEventListener('input', filterUsers);
    });
</script>