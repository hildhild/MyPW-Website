        font-size: 28px;
    }

    .number {
        margin-left: 10px;
        font-size: 48px;
    }

    .total {
        margin-left: 10px;
        font-size: 24px;
    }

    .stars {
        margin-top: 10px;
        color: #FFD600;
        font-size: 24px;
    }

    /*---------------------------------------back btn*/
    .user-list-back-button {
        right: 0;
        float: right;
        margin-right: 20px;
        margin-top: 17px;
        justify-items: center;
        height: 50px;
        width: 160px;
        background-color: #33A0F2;
        border-radius: 20px;
        border: none;
        text-align: center;
    }
</style>

<div class="check-frequence-container">
    <a href="/admin/user-list">
        <button type="button" class="user-list-back-button" onclick="">
            <p style=" font-size: 24px; color: white; font-weight: 600; margin: 0;">Back</p>
        </button>
    </a>
    <h1 style="font-size: 24px; margin-left:15px; margin-top: 10px;">Check frequence:</h1>
    <h5 style="font-size: 16px; margin-left:15px; margin-top: 10px;">Frequence of system:</h5>
    <div class="frequence-chart-container">
        <img class="frequence-chart-container__chart" src="/img/FrequenceChart.png"></img>
        <div class="frequence-info">
            <div class="frequence-info__left">
                {{!-- <div class="frequence-info__left__info-item">
                    <p>First access:</p>
                    <p>12/12/2023</p>
                </div>
                <div class="frequence-info__left__info-item">
                    <p>Last access:</p>
                    <p>12/12/2023</p>
                </div> --}}
                {{!-- <div class="frequence-info__left__info-item">
                    <p>Today access:</p>
                    <p>5</p>
                </div> --}}
                <div class="frequence-info__left__info-item">
                    <p>Total access:</p>
                    <p>{{totalAccess}}</p>
                </div>
            </div>
            <div class="frequence-info__right">
                <div class="container container-fluid">
                    <div class="col-lg-4"></div>
                    <div class="circle col-lg-4" style="
                    font-weight: 700;
                    color: white;
                    text-shadow: 3px 0 #0075FF, -3px 0 #0075FF, 0 3px #0075FF, 0 -3px #0075FF, 3px 3px #0075FF, -3px -3px #0075FF, 3px -3px #0075FF, -3px 3px #0075FF, 6px 6px #00000040;
                ">MYPW</div>
                    <div class="number-container col-lg-8">
                        <div class="number">{{avgScore}}</div>
                        <div class="total">&#127939; total: {{feedbackCount}}</div>
                        <div class="stars" id="stars">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    const stars = {{floorAvgScore}};
    const nonStars = 5 - stars;
    const divStars = document.getElementById("stars");
    console.log(divStars);
    for (let i = 0; i < stars; i++) {
        divStars.innerText += "★ "
    }
    for (let i = 0; i < nonStars; i++) {
        divStars.innerText += "☆ "
    }
</script>