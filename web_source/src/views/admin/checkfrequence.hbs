        padding-bottom: 30px;
    }

    .circle {
        margin-top: 20px;
        width: 150px;
        height: 150px;
        background-color: #33A0F2;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        color: white;
