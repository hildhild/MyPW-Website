<div class="w-50 d-flex justify-content-center align-items-center" style="
    min-height: 75%; aspect-ratio: 1/1;;background-color:#ffffff; border-radius:10%;
    box-shadow: 20px 20px 20px 0px #00000040;
">
    <div class="h-100 p-5" style="width:80%;">
        <div class="text-center">
            <span class="fs-1 fw-bold">LOGIN</span>
        </div>
        <form class="w-100" method="post" action="login">
            <div class="account pt-5 d-flex align-items-center">
                <div style="width:15%;"><i class="bi bi-person-fill fs-1"></i></div>
                <input id="username" name="username" class="account-child border text-center fs-5 bg-light" placeholder="Username" style="border-radius:10px;width:70%;min-height:50px;">
            </div>
            <div class="password pt-4 d-flex align-items-center">
                <div style="width:15%;"><i class="bi bi-key-fill fs-1"></i></div>
                <input type="password" id="password" name="password" class="account-child border text-center fs-5 bg-light" placeholder="Password" style="border-radius:10px;width:70%;min-height:50px;">
            </div>
            <div class="pt-2">
                <a href="/login/2fa" class="fs-4" style="
                    text-decoration: none;
                ">
                    Quên mật khẩu?
                </a>
            </div>
            <div class="d-flex justify-content-center align-items-center pt-4"><button class="btn btn-primary fs-3" style="border-radius: 10px;">Đăng nhập</button ></div>
            
        </form>
        <div class="d-flex justify-content-center align-items-center pt-4"><button class="btn btn-secondary fs-3" style="border-radius: 10px;">Đăng nhập bằng Gmail</button ></div>
    </div>
</div>

